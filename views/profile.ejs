<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white font-sans min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('partials/navbar', { user }) %>

  <!-- Main Container -->
  <div class="flex-grow px-4 py-10 max-w-3xl mx-auto space-y-10">

    <!-- Profile Info -->
    <div class="text-center">
      <img 
        src="/images/<%= user.profilepic %>" 
        alt="Profile Picture"
        class="w-32 h-32 rounded-full mx-auto object-cover ring-4 ring-orange-500 shadow-lg"
      />

      <div class="mt-4 text-center">
  <a href="/profile/upload" class="inline-block px-4 py-2 bg-orange-500 text-white rounded hover:bg-orange-600 transition">
    Upload Profile Picture
  </a>
</div>

      <h1 class="text-4xl font-bold text-orange-400 mt-4">Welcome, <%= user.name %>!</h1>
      <p class="text-sm text-gray-400">@<%= user.username %></p>
    </div>

    <!-- Create Post -->
    <div class="bg-zinc-800 p-6 rounded-2xl shadow-lg space-y-4">
      <h2 class="text-2xl font-semibold text-orange-300">Create a New Post</h2>
      <form action="/post" method="POST" class="space-y-4">
        <textarea 
          name="content" 
          rows="4" 
          placeholder="What's on your mind?" 
          class="w-full p-4 rounded-lg bg-zinc-700 text-white placeholder-gray-400 border border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500"
        ></textarea>
        <button 
          type="submit" 
          class="w-full bg-orange-500 hover:bg-orange-600 text-white py-2 rounded-lg transition font-semibold shadow-md"
        >
          Post
        </button>
      </form>
    </div>

    <!-- All Posts -->
    <div class="space-y-6">
      <h2 class="text-2xl font-semibold text-orange-300">Your Posts</h2>

      <% user.posts.slice().reverse().forEach((post) => { %>
        <div class="bg-zinc-800 p-5 rounded-xl shadow-md space-y-2 border border-zinc-700">
          <p class="text-sm text-blue-400 font-semibold">@<%= user.username %></p>
          <p class="text-lg text-white"><%= post.content %></p>
          <div class="flex items-center gap-4 mt-2 text-sm text-gray-400">
            <a 
              href="/like/<%= post._id %>" 
              class="text-orange-400 hover:underline"
            >
              <%= post.likes.includes(user._id) ? "Unlike" : "Like" %>
            </a>
            <span><%= post.likes.length %> likes</span>
            <a 
              href="/edit/<%= post._id %>" 
              class="text-orange-400 hover:underline"
            >
              Edit
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
